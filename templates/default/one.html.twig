{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div {{ stimulus_controller('counter') }}>
        <button
            class="btn btn-primary btn-sm"
            data-action="click->counter#increment"
            {# data-action="counter#increment" #}
        >
            Click me!
        </button>
        <br>
        I have been clicked
        <span data-counter-target="count">0</span>
        times!
    </div>

    <h1>Hello {{ controller_name }}! âœ…</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>/var/www/html/src/Controller/DefaultController.php</code></li>
        <li>Your template at <code>/var/www/html/templates/default/index.html.twig</code></li>
    </ul>

    <p><a href="{{ path('app_two') }}">Two</a></p>
    <p><a href="{{ path('app_default') }}">Default</a></p>
</div>
{% endblock %}
